<div class='row video-transcript-container text-mode'>
  <div class='video-container'>
    <video id="example_video_1" class="video-js vjs-default-skin vjs-big-play-centered vjs-has-started"
      controls preload="auto" width="auto" height="auto"
      data-setup='{"example_option":true}'>
    </video>
    <div class="ctn-video-share-link">
      <h3>Link to <span class='span-time'></span></h3>
      <div class="input-group">
        <input type="text" class="form-control" id='input-url-base' readonly>

        <span class='input-group-btn' data-placement="bottom" title="Copy the video share link" data-toggle="tooltip" data-container="#btn-copy-video-link-tooltip">
          <a class="btn btn-green" id="btn-copy-video-link"><i class="fa fa-link"></i></a>
        </span>
      </div>
      <div id='btn-copy-video-link-tooltip'></div>
    </div>
  </div>
  <div class='transcript-container show-transcripts'>
    <div class='transcript-header-container dropdown clearfix'>

      <a class="btn btn-dark-blue dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        More <span class="caret"></span>
      </a>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><a id='toggle-transcripts'><i class='fa fa-ftl fa-align-left'></i>Transcripts</a></li>
        <li><a id='btn-create-highlight'><i class='fa fa-ftl fa-bookmark'></i>Share a highlight</a></li>
      </ul>

      <h3>Timeline</h3>
    </div>
    <div id='videoText'>
      <div class='ctn-timeline-beginning'></div>
      <!-- insert timeline here -->
      <div class='ctn-timeline-ending'>(no transcript)</div>
    </div>
    <a id='btn-add-note' class='btn btn-medium-blue'><i class='fa fa-ft fa-plus'></i>Add a Note</a>
  </div>
</div>

<script id="video-text-template" type="text/x-handlebars-template">
  {{#each rows}}
    {{> video-text-partial}}
  {{/each}}
</script>

<script id='video-text-partial' type='text/x-handlebars-template'>
  <div class='ctnVideoTextLink clearfix {{displayClass}}' data-timestamp='{{time}}'>
    <div class='videoTextLink clearfix'>
      <input type='text' class='video-text-time' value='{{displayTime}}' readonly></input>
      <div class='video-text-icon-display'>
        <div class='video-text-icon'><i class='{{displayIcon}}'></i></div>
        {{#if editable}}
          <textarea class='video-text-display' rows='1' readonly>{{{displayText}}}</textarea>
        {{else}}
          <div class='video-text-display'>{{{displayText}}}</div>
        {{/if}}
      </div>
      {{#if editable}}
        <a class='video-btn-edit sub'><i class='fa fa-ft fa-edit'></i>Edit</a>
      {{/if}}
    </div>
    {{#if editable}}
      <div class='video-text-buttons'>
        <span class='video-btn-save btn btn-success btn-colorless'><i class='fa fa-ft fa-check'></i>Save</span>
        <span class='video-btn-cancel btn btn-danger btn-colorless'><i class='fa fa-ft fa-times'></i>Cancel</span>
        {{#if trashable}}
          <span class='video-btn-trash btn btn-grey btn-colorless'><i class='fa fa-trash'></i></span>
        {{/if}}
      </div>
    {{/if}}
  </div>
</script>

<script id='video-resize-button-template' type='text/x-handlebars-template'>
  <div class="vjs-custom-resize-control vjs-control " role="button" aria-live="polite" tabindex="0">
    <div class='vjs-custom-resize-icon'></div>
  </div>
</script>
