<div class="modal confirmation-modal" id='delete_confirmation_container' tabindex='-1'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="confirmation-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="confirmation-body">
        <h4>Are you sure you want to delete this <%= controller %>?</h4>
        <br/>
        <a id='btn-delete-yes' class='btn btn-green'><span>Yes, delete the <%= controller %></span></a>          
        <a id='btn-delete-no' class='btn btn-medium-blue'><span>No, return to the <%= controller %></span></a>
      </div><!-- /.confirmation-body -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
