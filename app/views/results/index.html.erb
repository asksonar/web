<section class='main-content-header'>
  <h1><%= @owner == 'me' ? 'My' : 'All' %> Results</h1>
</section>
<section class="main-content">
  <% if flash[:scenario_message] %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%=flash[:scenario_message]%>
    </div>
  <% end %>

  <% @results.each do |scenario| %>
    <a class='panel' href='<%= @owner == 'me' ? my_result_path(scenario) : result_path(scenario) %>'>
      <div class='row'>
        <div class='col-md-8 title-container'>
          <h1><%= scenario.title %></h1>
          <p class='sub'>created by <%= "scenario.created_by.full_name" %> (<%= scenario.created_by.email %>) <%= time_ago_in_words(scenario.created_at)%> ago</p>
        </div>
        <div class='col-md-4'>
          <div class='row counts-container'>
            <div class='col-xs-6'>
              <h1><i class='fa fa-smile-o text-success'></i><%= scenario.total_delighted %></h1>
              <p class='sub'>moment<%= scenario.total_delighted != 1 ? 's' : '' %></p>
            </div>
            <div class='col-xs-6'>
              <h1><i class='fa fa-frown-o text-danger'></i><%= scenario.total_confused %></h1>
              <p class='sub'>moment<%= scenario.total_confused != 1 ? 's' : '' %></p>
            </div>
          </div>

          <% if scenario.status == 'live' %>
            <span class='label-live'>Live</span>
          <% elsif scenario.status == 'completed' %>
            <span class='label-not-live'>Not Live</span>
          <% else %>
            error
          <% end %>
          <h2><%= scenario.user_completed_count || 0 %> users</h2>
        </div>
      </div>
    </a>
  <% end %>

</section>
