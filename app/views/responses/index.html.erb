<% content_for :title do %>
  Recent Responses
<% end %>

<section class="main-content-header">
  <h1><%= content_for :title  %></h1>
</section>

<section class="main-content">
  <div class="btn btn-medium-blue response-alert" role="alert"></div>
  <% @result_steps.each do |result_step| %>
    <a class='panel' href='<%=result_video_path(result_step.scenario, result_step)%>'>
      <div class='title-container'>
        <h1><%= result_step.scenario_title %></h1>
        <p class='sub'>completed by <%= result_step.email %> <%= time_ago_in_words(result_step.created_at)%> ago (<%= pp_plural_with_number(result_step.scenario_step_count, 'step') %>)</p>
      </div>
    </a>
  <% end %>
  <%= render partial: 'responses/partials/response_template' %>
</section>

