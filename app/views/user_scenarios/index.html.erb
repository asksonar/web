<div class='pageheader'>
  <h1>Welcome to your study!</h1>
</div>
<section id='main-content'>
  <script type='text/javascript'>
    var scenarioParams = <%= raw @scenario.share_link_params_json %>
  </script>

  <div id='div-start-study' class='row'><div class='col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1'><div class='panel panel-default'>

    <div class='panel-body'>
      <%= bootstrap_form_for :user_scenario do |f| %>
        <%= f.hidden_field :scenario_hashid, value: @scenario.hashid %>

        <%= f.label :summary %>
        <p><%= @scenario.description %></p>
        <%= f.text_field :email %>
        <%= f.check_box :anonymous, label: 'Take study anonymously' %>
      <% end %>

    </div>
    <div class='panel-footer'>
      <div class='btn btn-primary' id='btn-start'>Start</div>
    </div>

  </div></div></div>

  <div id='div-started-study' class='row'><div class='col-md-12'><div class='panel panel-default'>
    <div class='panel-body'>
      Study has started...
    </div>
  </div></div></div>

</section>
