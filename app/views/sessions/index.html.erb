<!DOCTYPE html>
<html>
<head>
  <title>sonar</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section class='container'>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div id="login-wrapper">
          <header id='login-header'>
            <div class="brand">
              <a href="/" class="logo">
                <div class='left-text'>s</div>
                <div class='left-ping'><i class='fa fa-rss'></i></div>
                <div class='middle-text'>o</div>
                <div class='right-ping'><i class='fa fa-rss'></i></div>
                <div class='right-text'>nar</div>
              </a>
            </div>
          </header>
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Sign In</h3>
            </div>
            <div class="panel-body">
              <% if flash[:error] %>
                <div class="alert alert-danger alert-dismissable">
                  <strong>Error! </strong><%=flash[:error]%>
                </div>
              <% end %>
              <p> Login to access your account.</p>
              <%# form class="form-horizontal" role="form"> %>
              <%= form_for :login, url: new_login_path, class: 'form-horizontal' do |f| %>
                  <div class="form-group">
                      <div class="col-md-12">
                          <%# <input type="email" class="form-control" id="email" placeholder="Email"> %>
                          <%= f.select :type, [
                            ["I'm a Researcher!", "researcher"],
                            ["I'm a Tester!", "tester"]
                          ], {}, { class: 'form-control' } %>
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-md-12">
                          <%# <input type="email" class="form-control" id="email" placeholder="Email"> %>
                          <%= f.email_field :email, value: 'one@research.com', class: 'form-control', placeholder: 'Email' %>
                          <i class="fa fa-user"></i>
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-md-12">
                          <!--<input type="password" class="form-control" id="password" placeholder="Password">-->
                          <%= f.password_field :password, class: 'form-control', placeholder: 'No password required' %>
                          <i class="fa fa-lock"></i>
                          <a href="javascript:void(0)" class="help-block">Forgot Your Password?</a>
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-md-12">
                          <%= f.submit "Sign in", class:'btn btn-primary btn-block' %>
                          <hr />
                          <a href="/" class="btn btn-default btn-block">Not a member? Sign Up</a>
                      </div>
                  </div>
              <% end %>
              <%# </form> %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
</html>
