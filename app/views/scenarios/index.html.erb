<div class='pageheader'>
  <h1>Manage your active scenarios - <%= @status.capitalize %></h1>
</div>
<section id="main-content">
  <% if flash[:scenario_message] %>

  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%=flash[:scenario_message]%>
  </div>

  <% end %>

  <div class='row'><div class='col-md-12'><div class='panel'><div class='panel-body'>
    <table class='table table-hover'>
    	<thead>
    		<tr>
    			<th>Title</th>
          <th>Completed</th>
    			<th>Show</th>
    		</tr>
    	</thead>
    	<tbody>
    	<% @scenarios.each do |scenario| %>
    		<tr>
    			<td><%= scenario.title %></td>
          <td><%= scenario.user_completed_count || 0 %></td>
    			<% if scenario.status == 'drafts' %>
            <td><%= link_to 'Edit Draft', edit_path(scenario) %></td>
          <% elsif scenario.user_completed_count and scenario.user_completed_count > 0 %>
            <td><%= link_to 'Summary Results', summary_path(scenario) %></td>
          <% else %>
            <td><%= link_to 'Show Details', scenario_path(scenario) %></td>
          <% end %>
    		</tr>
    	<% end %>
    	</tbody>
    </table>
  </div></div></div></div>
</section>
