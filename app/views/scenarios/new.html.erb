<div class='pageheader'>
  <h1>Create a new scenario</h1>
</div>
<section id="main-content">
  <%= bootstrap_form_for :scenario, url: scenarios_path do |f| %>
  	 <div class='row'>
      <div class='col-sm-10'>
        <div class='panel panel-default'>
          <div class='panel-body'>
        		<%= f.text_field :title, hide_label: true, placeholder: 'Give it a summary' %>
        		<%= f.text_area :description, hide_label: true, rows: 3, placeholder: 'Add some context for the user' %>
            <%= f.url_field :url, hide_label: true, placeholder: 'Start off at this URL' %>
          </div>
        </div>
        <div class='panel panel-default'>
          <div class='panel-body'>
            <%= f.text_area :steps, hide_label: true, rows: 2, placeholder: 'Tell your user what to do next' %>
          </div>
        </div>
        <div class='panel panel-default'>
          <div class='panel-body'>
            <button type="button" class='btn btn-default' id='btnAddNewStep'>
              <i class='glyphicon glyphicon-plus'></i>
              Add New Step
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class='panel panel-default divButtons'>
      <div class='panel-body'>
    		<%= f.submit 'Save Draft', class: 'btn btn-primary' %>
        <%= f.submit 'Publish', class: 'btn btn-info' %>
        <a href='<%=scenarios_path%>' class='btn btn-default'>Delete</a>
      </div>
    </div>

  <% end %>
</section>
