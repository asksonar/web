<% content_for :main_wrapper_class do %>
  sidebar-collapsed
<% end %>

<% content_for :title do %>Profile settings<% end %>

<section class='main-content-header'>
  <h1>Profile settings</h1>
</section>

<section class='main-content'>

  <div class='row'>
    <div class='col-sm-3'>
      <div class='panel'>
        <%= render 'nav/profile' %>
      </div>
    </div>
    <div class='col-sm-8'>

      <div class='panel'>
        <%= bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name), inline_errors: false, html: { method: :put }, layout: :horizontal, label_col: "col-md-3", control_col: "col-md-9" do |f| %>

          <div class="panel-section">
            <h2>Account</h2>
            <%= f.text_field :full_name, autofocus: true, autocomplete: "off" %>

            <%= f.email_field :email, autocomplete: "off" %>
          </div>

          <div class="panel-section">
            <h2>Password</h2>
            <%= f.password_field :current_password, autocomplete: "off",
              label: 'Current Password' %>

            <%= f.password_field :password, autocomplete: "off",
              label: 'New password' %>

            <%= f.password_field :password_confirmation, autocomplete: "off",
              label: 'Verify password' %>
          </div>

          <div class="panel-section">
            <a href='<%= root_path %>' class='btn btn-grey'>Cancel</a>
            <%= f.submit "Save Changes", class: 'btn btn-dark-blue' %>
          </div>
        <% end %>

        <a data-toggle='modal' data-target='#delete-with-form'>Delete my account</a>
      </div>
    </div>
  </div>

</section>

<%= render partial: 'utility/delete_with_form_modal', locals: {delete_item: 'account', path: registration_path(resource_name)} %>

