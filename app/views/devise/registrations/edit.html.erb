<section class='main-content-header'>
  <h1>Edit Profile</h1>
</section>
<section class='main-content'>
  <div class="row">
    <div class='panel col-sm-9'>
      <%= bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name), inline_errors: false, html: { method: :put } do |f| %>

        <div class="panel-section">
          <h2>Account</h2>
          <%= f.text_field :full_name, autofocus: true, autocomplete: "off" %>

          <%= f.email_field :email, autocomplete: "off" %>
        </div>

        <div class="panel-section">
          <h2>Password</h2>
          <%= f.password_field :current_password, autocomplete: "off",
            label: 'Current Password' %>

          <%= f.password_field :password, autocomplete: "off",
            label: 'New password' %>

          <%= f.password_field :password_confirmation, autocomplete: "off",
            label: 'Verify password' %>
        </div>

        <div class="panel-section">
          <a href='<%= results_path %>' class='btn btn-grey btn-med'>Cancel</a>
          <%= f.submit "Save Changes", class: 'btn btn-dark-blue btn-med strong' %>
        </div>
      <% end %>

      <a id='btn-delete'>Delete my account</a>
    </div>
  </div>
</section>

<%= render partial: 'utility/delete_account_modal' %>
