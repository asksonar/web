<% content_for :title do %>Change Password<%end%>

<section class='main-content-header'>
  <h1>Change your password</h1>
</section>
<section class='main-content'>
  <div class='panel'>
    <%= bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), inline_errors: false, html: { method: :put } do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, autofocus: true, autocomplete: "off", label: 'New password' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", label: 'Confirm new password' %>

      <div class="actions">
        <%= f.submit "Change my password", class: 'btn btn-dark-blue' %>
      </div>
    <% end %>

  </div>
</section>
