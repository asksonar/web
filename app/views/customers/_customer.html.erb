<tr class='user-line'>
  <td><%= customer.email %></td>
  <td><%= customer.first_touch && local_time(customer.first_touch) %></td>
  <td><%= customer.last_touch && local_time_ago(customer.last_touch) %></td>
  <td><%= customer.region %></td>
  <td><%= customer.country %></td>
</tr>
<tr class='user-metadata' style='display:none'>
  <td colspan='5'>
    <% if customer.metadata %>
      <% customer.metadata.each do |key, value| %>
        <dl class="dl-horizontal">
          <dt><%= key %></dt>
          <dd><%= value %></dd>
        </dl>
      <% end %>
    <% else %>
      <div class='no-user-metadata'>
        <i class='fa fa-ft fa-info-circle'></i>No custom metadata added yet.
      </div>
    <% end %>
  </td>
</tr>
