<% content_for :title do %>
  Edit Study
<% end %>

<%= bootstrap_form_for @scenario, url: @scenario.drafts? ? draft_path(@scenario) : edit_result_path(@scenario), method: :patch, html: {class: ('draft-editable-steps' if @scenario.can_add_steps?) } do |f| %>

  <%= f.hidden_field :template, value: params[:template] %>

  <%= render partial: 'drafts/partials/form', locals: {f: f} %>
  <%= render partial: 'drafts/partials/step_template', locals: {f: f} %>

<% end %>
