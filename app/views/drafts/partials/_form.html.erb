<section class='main-content-header draft-header'>
  <div class='row'>
    <div class='ctn-title'>
      <%= f.text_field :title, hide_label: true, placeholder: 'Title your study', class: 'input-lg' %>
    </div>

    <div class='ctn-template'>
      <div class="btn-group" id='btn-template-group'>
        <a class="btn btn-light-blue dropdown-toggle h4" data-toggle="dropdown" aria-expanded="false">
          Start from a template<span class="caret"></span>
        </a>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <% ::Template.product.each do |template| %>
            <li><a href='?template=<%=template.value%>'><%=template.display%></a></li>
          <% end %>
          <li class="divider"></li>
          <% ::Template.marketing.each do |template| %>
            <li><a href='?template=<%=template.value%>'><%=template.display%></a></li>
          <% end %>
        </ul>
      </div>
      <p>or just start typing below.</p>
    </div>
  </div>

</section>
<section class="main-content draft-content">

  <div class='panel'>

    <div class='summary-container'>
      <%= f.text_area :description, rows: 3, hide_label: true, placeholder: 'Welcome the panelist to the study' %>
    </div>

    <div class='steps-container'>
      <div id='ctn-step-list'><!-- insert new steps here --></div>
    </div>

    <div class='clearfix buttons-container'>
      <a href='<%=
        if @scenario.new_record?
          results_path
        elsif @scenario.drafts?
          drafts_path
        else
          result_path(@scenario)
        end
      %>' class='btn btn-grey pull-left btn-med'>Cancel</a>

      <% if @scenario.drafts? %>
        <a class='btn btn-light-blue btn-med strong' id="btn-delete">Delete Draft</a>
        <%= f.submit 'Create the study', name: 'publish', class: 'btn btn-dark-blue pull-right btn-med strong' %>
        <%= f.submit 'Save as a draft', name: 'draft', class: 'btn btn-medium-blue pull-right btn-med' %>
      <% else %>
        <%= f.submit 'Update the study', name: 'update', class: 'btn btn-dark-blue pull-right btn-med strong' %>
      <% end %>
    </div>

  </div>
</section>

<div class="modal" id='delete_confirmation_container' tabindex='-1'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="titlebar">
        <div class='titlebar-buttons pull-left'>
          <div class="btn-text" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></div>
        </div>
        <div class='titlebar-center'><img class="titlebar-icon" src='<%=asset_path 'SonarLogoThick_White_100x37.png' %>'></div>
      </div>
      <div class="confirmation-body">
        <div>
          <p>Are you sure you want to delete this draft?</p>
          <br/>
          <a id='btn-delete-yes' class='btn btn-green'><span>Yes, delete the draft</span></a>
          <a id='btn-delete-no' class='btn btn-medium-blue'><span>No, return to draft</span></a>
        </div>
      </div><!-- /.confirmation-body -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
