<section class='main-content-header'>
  <h1>My Drafts</h1>
</section>
<section class="main-content">
  <% if flash[:saved_draft_title] %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <strong>Draft Saved</strong> - <%= flash[:saved_draft_title] %>
    </div>
  <% end %>

  <% @scenarios.each do |scenario| %>
    <a class='panel' href='<%=edit_draft_path(scenario)%>'>
      <div class='row'>
        <div class='col-md-8'>
          <h1><%= scenario.title %></h1>
          <p class='sub'>created <%= time_ago_in_words(scenario.created_at) %> ago</p>
        </div>
        <div class='col-md-4'>
          <h2><%= scenario.scenario_steps.count %> step<%= scenario.scenario_steps.count == 1 ? '' : 's'%></h2>
          <p>last updated <%= time_ago_in_words(scenario.updated_at) %> ago</p>
        </div>
      </div>
    </a>
  <% end %>

</section>
