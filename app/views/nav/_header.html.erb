<%= navbar do %>
  <%= navbar_header do %>
    <a class='navbar-brand' href='/'>
      <img src='<%=image_path 'purple_cow_by_vonBorowsky.jpg'%>' alt='Purple Cow' height='40px'> Purple Cow
    </a>
  <% end %>

  <%= navbar_collapse do %>
    <%= navbar_group class: 'foo', id: 'menu' do %>
      <%= navbar_item "Home", '/' %>
      <% if current_user and current_user.isResearcher? %>
        <%= navbar_item "Scenarios", '/scenarios' %>
      <% elsif current_user and current_user.isUser? %>
        <%= navbar_item "User Scenarios", '/user_scenarios' %>
      <% end %>
    <% end %>
    <%= navbar_group align: 'right' do %>
      <% if current_user %>
        <%= navbar_item current_user.display, '/account' %>
        <%= navbar_item 'Logout', logout_path %>
      <% else %>
        <%= navbar_item 'Login', login_path %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
