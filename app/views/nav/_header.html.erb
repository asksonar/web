<header id="header"> <!--logo start-->
  <div class="brand">
     <a href="/" class="logo">
        <img src='<%=image_path 'cow.png'%>' alt='Purple Cow' width='40px'><span>PURPLE</span>COW
    </a>
 </div>
<!--logo end-->
  <ul class="nav navbar-nav navbar-left">
      <li class="toggle-navigation toggle-left">
          <button class="sidebar-toggle" id="toggle-left">
              <i class="fa fa-bars"></i>
          </button>
      </li>
  </ul>
  <ul class="nav navbar-nav navbar-right">
    <% if current_user %>
      <li class="dropdown profile hidden-xs">

          <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
              <span class="meta">
                  <span class="avatar">
                      <img src="/assets/user.jpg" class="img-circle" alt="">
                  </span>
              <span class="text"><%= current_user.display %></span>
              <span class="caret"></span>
              </span>
          </a>
          <ul class="dropdown-menu animated fadeInRight" role="menu">
              <li>
                  <span class="arrow top"></span>
                  <h5>
                      <span>80%</span>
                      <small class="text-muted">Profile complete</small>
                  </h5>
                  <div class="progress progress-xs">
                      <div class="progress-bar progress-bar" style="width: 80%">
                      </div>
                  </div>
              </li>
              <li class="divider"></li>
              <li>
                  <a href="/account">
                      <span class="icon"><i class="fa fa-user"></i>
                      </span>Account</a>
              </li>
              <li class="divider"></li>
              <li>
                  <a href="<%= logout_path %>">
                      <span class="icon"><i class="fa fa-sign-out"></i>
                      </span>Logout</a>
              </li>
          </ul>
      </li>
    <% else %>
      <li><a href='<%= login_path %>'>Login</a></li>
    <% end %>
  </ul>
 </header>
