<header class="header"> <!--logo start-->
  <div class="brand">
    <a href="/" class="logo"><img src='<%=asset_path 'SonarLogo_White-02.svg' %>'></a>
  </div>

  <ul class='nav nav-pills nav-left visible-xs'>
    <li>
      <a id='toggle-sidebar' href="#"><i class="fa fa-bars"></i></a>
    </li>
  </ul>

  <ul class="nav nav-pills nav-left hidden-xs">
    <% if user_signed_in? && current_user.has_v3? %>
      <%= navbar_item "<i class='fa fa-ft fa-database'></i>Fleet Database", '/fleets' %>
      <!-- <%= navbar_item "<i class='fa fa-ftl fa-bar-chart'></i>Analysis - v1", '/analysis/wb' %>
      <%= navbar_item "<i class='fa fa-ftl fa-bar-chart'></i>Analysis - v2", '/analysis/pv' %> -->
      <%= navbar_dropdown "<i class='fa fa-bar-chart'></i>Analysis" do %>
        <%= bsh_navbar_item "V1", analysis_wb_path, active: false %>
        <%= bsh_navbar_item 'V2', analysis_pv_path, active: false %>
      <% end %>
      <%= navbar_dropdown "<i class='fa fa-file'></i>Reports" do %>
        <%= bsh_navbar_item "Aircraft Reports", reports_reports_path, active: false %>
        <%= bsh_navbar_item 'Forecasting', reports_forecasts_path, active: false %>
      <% end %>
    <% end %>
    <% if user_signed_in? && current_user.has_v2? %>
      <%= navbar_item "<i class='fa fa-ft fa-home'></i>Dashboard", '/dashboard' %>
      <%= navbar_item "<i class='fa fa-ft fa-line-chart'></i>Trends", '/trends' %>
      <%= navbar_item "<i class='fa fa-ft fa-bar-chart'></i>Comparisons", '/comparisons' %>
    <% end %>
  </ul>

  <ul class="nav nav-pills nav-right">
    <% if user_signed_in? && current_user.has_v2? %>
      <%= navbar_dropdown "<i class='fa fa-gear'></i>", class: 'hidden-xs' do %>
        <%= bsh_navbar_item "Survey", settings_send_path, active: false %>
        <%= bsh_navbar_item "Setup", setup_embed_path, active: false %>
        <%= bsh_navbar_item "Customers", customers_path, active: false %>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <%= navbar_dropdown "<i class='fa fa-user'></i>" do %>
        <%= bsh_navbar_item "Profile", edit_user_registration_path, active: false %>
        <%= bsh_navbar_item 'Users', admin_users_path, active: false %>
        <%= bsh_navbar_item "Logout", destroy_user_session_path, active: false %>
      <% end %>
    <% else %>
      <li>
        <a href='<%=new_user_session_path%>'>Login</a>
      </li>
    <% end %>
  </ul>

 </header>
